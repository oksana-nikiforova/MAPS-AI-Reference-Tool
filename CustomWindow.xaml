<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="MAPSAI.CustomWindow"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="MAPS-AI">

    <Window.TitleBar>
        <TitleBar Title="MAPS-AI">
            <TitleBar.Content>
                <HorizontalStackLayout
                    HorizontalOptions="End"
                    Spacing="5"
                    VerticalOptions="Center">
                    <Label
                        x:Name="CPULabel"
                        FontSize="12"
                        Text="CPU(0%)"
                        VerticalOptions="Center" />
                    <Label
                        x:Name="GPULabel"
                        FontSize="12"
                        Text="GPU(0%)"
                        VerticalOptions="Center" />
                </HorizontalStackLayout>
            </TitleBar.Content>
        </TitleBar>
    </Window.TitleBar>


</Window>