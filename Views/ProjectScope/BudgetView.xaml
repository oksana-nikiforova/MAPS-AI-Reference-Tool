<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="MAPSAI.Views.ProjectScope.BudgetView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:MAPSAI.Views">
    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="8">
            <Label
                FontAttributes="Bold"
                FontSize="18"
                HorizontalOptions="Center"
                Text="Budget parameters"
                VerticalOptions="Center" />

            <Label Text="Foreseen Budget" />
            <HorizontalStackLayout Spacing="10">
                <Entry Placeholder="From" />
                <Entry Placeholder="To" />
            </HorizontalStackLayout>

            <Label Text="Instructions for Budget definition to use in GenAI" />
            <Editor Placeholder="Enter text..." />

            <Label Text="Expense / Costs" />

            <controls:BindableListView
                CheckboxProperty="IsUsed"
                CollectionProperty="Collection"
                DisplayProperty="Text"
                ItemSourceObject="" />

            <Label Text="Total Budget" />
            <controls:BindableEntryView />
        </VerticalStackLayout>
    </ScrollView>
</ContentView>
