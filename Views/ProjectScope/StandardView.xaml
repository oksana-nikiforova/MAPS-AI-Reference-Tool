<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="MAPSAI.Views.ProjectScope.StandardView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:fa="clr-namespace:UraniumUI.Icons.FontAwesome;assembly=UraniumUI.Icons.FontAwesome"
    xmlns:local="clr-namespace:MAPSAI.Services"
    xmlns:views="clr-namespace:MAPSAI.Views">
    <VerticalStackLayout Padding="10" Spacing="10">
        <Label
            FontAttributes="Bold"
            FontSize="18"
            HorizontalOptions="Center"
            Text="Standard"
            VerticalOptions="Center" />
        <Label Text="Active standard:" />
        <Grid ColumnDefinitions="*">
            <Picker
                x:Name="picker"
                Grid.Column="0"
                ItemDisplayBinding="{Binding Name}"
                ItemsSource="{Binding Standards}"
                PropertyChanged="picker_PropertyChanged"
                SelectedItem="{Binding ActiveStandard}" />
        </Grid>

        <Label
            FontAttributes="Bold"
            FontSize="17"
            Text="Generate IT Project management plan"
            VerticalOptions="Center" />

        <Button
            Clicked="Button_Clicked"
            Style="{StaticResource DefaultButtonStyle}"
            Text="Generate" />


    </VerticalStackLayout>
</ContentView>
