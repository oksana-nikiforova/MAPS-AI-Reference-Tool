<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="MAPSAI.Views.ProjectScope.StakeholdersView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:MAPSAI.Views">
    <VerticalStackLayout Padding="10" Spacing="8">
        <Label
            FontAttributes="Bold"
            FontSize="18"
            HorizontalOptions="Center"
            Text="Stakeholders"
            VerticalOptions="Center" />

        <controls:BindableListView
            CheckboxProperty="IsUsed"
            CollectionProperty="Collection"
            DisplayProperty="Text"
            ItemSourceObject="{Binding Stakeholders}" />
    </VerticalStackLayout>
</ContentView>
