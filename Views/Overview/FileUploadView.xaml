<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="MAPSAI.Views.ProjectDataFiles.FileUploadView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MAPSAI.Services"
    xmlns:views="clr-namespace:MAPSAI.Views">
    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="10">
            <Label
                FontAttributes="Bold"
                FontSize="18"
                Text="Import"
                VerticalOptions="Center" />

            <views:UploadElement
                x:Name="XmlUpload"
                FileType="{Binding XmlFileType}"
                UploadLabel="Business Process model" />

            <Button
                Clicked="Upload"
                Style="{StaticResource DefaultButtonStyle}"
                Text="Upload" />
        </VerticalStackLayout>
    </ScrollView>
</ContentView>
