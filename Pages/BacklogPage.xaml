<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MAPSAI.Pages.BacklogPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:backlogviews="clr-namespace:MAPSAI.Views.Backlog"
    xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
    xmlns:views="clr-namespace:MAPSAI.Views">

    <Grid
        Padding="6"
        ColumnSpacing="6"
        RowSpacing="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="8*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Stroke="#005050">

            <material:TabView>

                <material:TabItem Title="User Stories">
                    <material:TabItem.ContentTemplate>
                        <DataTemplate>
                            <backlogviews:UserStoriesView x:Name="StoriesSelectView" />
                        </DataTemplate>
                    </material:TabItem.ContentTemplate>
                </material:TabItem>

            </material:TabView>
        </Border>

        <Border Grid.Column="1" Stroke="#005050">
            <Grid RowDefinitions="Auto,*,Auto">
                <views:NavigationView Grid.Row="0" />

                <backlogviews:UserStoryEditView Grid.Row="1" SelectedStory="{Binding SelectedStory}" />

                <views:ConsoleView Grid.Row="2" />
            </Grid>
        </Border>

    </Grid>

</ContentPage>